<div class="modal-dialog">
	<div class="modal-content">
		<div class="modal-body">
				<%= simple_form_for @print, remote:true, html: { style: "display:inline;" } do |f| %>
				  <h4>Log Print</h4><hr>
					<div class="form-group">
						 <%= f.label :project, required: true %>
							<%= f.collection_select :project_id, Project.active.sorted, :id, :name %>
					</div>
				  <div class="form-group">
				    <%= f.label :device, required: true %>
				    <%= f.collection_select :device, Print::DEVICE, :to_s, :to_s, :include_blank => false%>
				  </div>
				  <div class="form-group">
				    <%= f.label :format, class: "control-label" %>
				    <%= f.collection_select :print_format, Print::FORMAT, :to_s, :to_s, :include_blank => false%>
				  </div>
				  <div class="form-group">
				    <%= f.input :page_count, required: true %>
				  </div>
				<div class="form-group">
				  <%= f.input :color %>
				</div>
				<div class="form-group">
				  <%= f.input :scan %>
				</div>
				<div class="modal-footer">
					<%= f.submit class: "btn btn-primary" %>
					<%= link_to "Cancel", "#", class: "btn", data: {dismiss: "modal"} %>
				</div>
			<% end %>

		</div>

	</div>

</div>
