<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-body">
      <% if @user.errors.any? %>
          <% @user.errors.full_messages.each do |error| %>
          <p class="alert alert-danger">
              <strong><%= error %></strong>
          </p>
          <% end %>
      <% end %>
      <%=simple_form_for @user, remote: true, html: { style: "display:inline;" } do |f|%>
          <h4>Employee Information </h4><hr>
          <div class="form-group">
              <%= f.label :role %>
              <%= f.collection_select :role, User::ROLE, :to_s, :to_s, :include_blank => true%>
          </div>
          <%= f.input :username%>
          <%= f.input :email %>
          <%= f.input :first_name%>
          <%= f.input :last_name%>
          <div class="form-group">
              <%= f.label :password %>
              <%= f.password_field :password, size: "60x12", class: "form-control" %>
          </div>
          <div class="form-group">
              <%= f.label :password_confirmation %>
              <%= f.password_field :password_confirmation, size: "60x12", class: "form-control"%>
          </div>

          <div class="form-group">
              <%= f.submit class: "btn btn-primary" %>
      </div>
      <% end %>


    </div>

  </div>
</div>
