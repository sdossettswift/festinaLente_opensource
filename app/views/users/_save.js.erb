$("ul.errors").html("")
<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  // $(".user-index").html("<%= escape_javascript(render 'index') %>")
  $("#user-modal").modal("hide")
<% end %>
