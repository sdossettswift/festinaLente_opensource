<div class="modal-dialog">
  <div class="modal-content">
    <%= simple_form_for @expense, remote:true, html:{style: "display:inline;"} do |f|%>
      <div class="modal-body">
        <ul class="errors"></ul>
        <h4>Log Expenses </h4><hr>

        <%= f.input :description, required: true %>
        <%= f.input :amount, required: true, default: 0 %>
        <%= f.input :mileage %>
        <%= f.input :date %>
        <div class="form-group">
            <%= f.label :project, required: true %>
            <%= f.collection_select :project_id, Project.all, :id, :name %>
        </div>
        <div class="form-group">
            <%= f.label :category, required: true %>
            <%= f.collection_select :category, Expense::CATEGORY, :to_s, :to_s, :include_blank => true %>
        </div>
        <%= f.input :vendor %>
        <%= f.input :reimburseable?, as: :boolean %>
      </div>
      <div class="modal-footer">
        <%= f.submit class: 'btn btn-primary'%>
        <%= link_to "Cancel", "#", class: "btn", data: {dismiss: "modal"} %>
      </div>
    <%end%>
  </div>
</div>
